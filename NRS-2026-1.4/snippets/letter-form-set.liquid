{% comment %} Reusable snippet for letter set order form {% endcomment %}
{%- liquid
  assign collection_handle = collection_handle | default: ''
  assign order_type = order_type | default: 'set'
-%}

<div class="col-6-master order-form-container">
  <form name="lettersForm" class="letters-form set">
    <h3 class="form-main-title">Order sets in 3 easy steps:</h3>
    
    {%- comment %} Step 1: Height Selection {% endcomment -%}
    <div class="step">
      <div class="step__header">
        <span class="step__number">1</span>
        <p class="step__label">Choose Your Letter / Panel Height</p>
      </div>
      <div class="height-guide">
        <div class="height-guide__left">
          <img src="//cdn.shopify.com/s/files/1/0284/0298/t/2/assets/howto.gif?4990" alt="How to find your Panel Height" width="100" height="100">
        </div>
        <div class="height-guide__right">
          <span style="font-weight: bold;">How to Find Your Letter / Panel Height:</span>
          <span>The Letter Height is the measurement of the letter by itself.</span>
          <span>The Panel Height is the measurement of the entire plastic panel.</span>
        </div>
      </div>
      <div class="step__form-input">
        <select name="letter-height" class="letter-height">
          <option value="">Select Height</option>
        </select>
      </div>
    </div>

    {%- comment %} Step 2: Set Type Selection (Moved Up) {% endcomment -%}
    <div class="step">
      <div class="step__header">
        <span class="step__number">2</span>
        <p class="step__label">Choose Your Set</p>
      </div>
      <div class="step__form-input">
        <select name="letter-set-type" class="letter-set-type" disabled>
          <option value="">Select Set Type</option>
        </select>
      </div>
    </div>

    {%- comment %} Step 3: Color Selection (Moved Down) {% endcomment -%}
    <div class="step">
      <div class="step__header">
        <span class="step__number">3</span>
        <p class="step__label">Choose Your Color</p>
      </div>
      
      <div class="height-guide__right color-note">
        <span>Additional processing time required for <strong style="color:#f00;">RED</strong></span>
      </div>
      
      <div class="step__form-input">
        <p>Select a height and set above to see available colors.</p>
        <select name="letter-color" class="letter-color" disabled>
          <option value="">Select Color</option>
        </select>
      </div>
    </div>

    {%- comment %} Price and Buttons {% endcomment -%}
    <div class="price-and-button-wrapper">
      <div class="price">$0.00</div>
      <input class="add-btn" type="submit" value="Add to Cart" disabled/>
      <input type="button" value="Sold Out" class="sold-out-btn" disabled style="display:none;"/>
    </div>
    <br/>
    <span class="error error-set" style="display:none; color:red;">Please Choose a Set</span>
    <span class="error error-color" style="display:none; color:red;">Please Choose a Color</span>
    <span class="error error-height" style="display:none; color:red;">Please Choose a Height</span>
  </form>
</div>
