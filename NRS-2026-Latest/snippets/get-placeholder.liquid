{% comment %}
    Renders a placeholder image.
    Usage:
    {% render 'get-placeholder',
        svg_name: 'product-apparel-1',    (Optional: Defaults to 'image')
        class: 'placeholder-svg',         (Optional: Defaults to 'placeholder-svg')
        aspect_ratio: '1/1'               (Optional: Defaults to '1/1')
    %}
{% endcomment %}

{%- liquid
    assign svg_val = svg_name | default: 'image'
    assign class_val = class | default: 'placeholder-svg'
    assign aspect_ratio_val = aspect_ratio | default: '1/1'
-%}

{%- if settings.placeholder_image != blank -%}
    {%- capture style -%}
        width: 100%; height: 100%; object-fit: contain; object-position: center; aspect-ratio: {{ aspect_ratio_val }};
    {%- endcapture -%}
    {{ settings.placeholder_image | image_url: width: 2048 | image_tag: class: class_val, loading: 'lazy', widths: '375,550,750,1100,1500,1780,2000,3000,3840', style: style }}
{%- else -%}
    <div class="placeholder-svg-wrapper" style="width: 100%; height: 100%; aspect-ratio: {{ aspect_ratio_val }};">
        {{ svg_val | placeholder_svg_tag: class_val }}
    </div>
{%- endif -%}

