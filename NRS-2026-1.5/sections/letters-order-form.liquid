<div class="custom-content">
  {{ section.settings.text_content }}
  {% if section.settings.image %}
    <img src="{{ section.settings.image | img_url: 'master' }}" alt="{{ section.settings.image.alt }}">
  {% endif %}
</div>

{% schema %}
{
  "name": "Custom Content",
  "settings": [
    {
      "type": "richtext",
      "id": "text_content",
      "label": "Text Content"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    }
  ],
  "presets": [
    {
      "name": "Custom Content"
    }
  ]
}
{% endschema %}
